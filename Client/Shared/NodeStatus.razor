<div class="card @(Status.IsSuccess ? "alert-success": "alert-danger")">
    <div class="card-header">
        <h4 class="mb-0">@Status.Name</h4>
        <h6 class="mb-0">@Status.Address</h6>
    </div>
    <div class="card-body p-3" style="font-family: monospace;">
        <div>
            Status: <span class="font-weight-bold">@(Status.HttpStatus != null ? Status.HttpStatus.Value : Status.IpStatus)</span>
        </div>
        <div>
            From: <span class="font-weight-bold">@Status.StartTime</span>
        </div>
        <div>
            To: <span class="font-weight-bold">@Status.LastTime</span>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public NodeStatusVM Status { get; set; }
}
