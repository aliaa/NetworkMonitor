<div class="row">
    <div class="col form-group">
        <Label For="() => Node.Name" />
        <input type="text" @bind="Node.Name" class="form-control" />
    </div>
    <div class="col form-group">
        <Label For="() => Node.Address" />
        <input type="text" @bind="Node.Address" class="form-control" />
    </div>
    <div class="col form-group">
        <Label For="() => Node.CheckMechanism" />
        <select class="form-control" @bind="Node.CheckMechanism">
            @foreach (var item in Enum.GetNames<NetworkNode.CheckMechanismEnum>())
            {
                <option>@item</option>
            }
        </select>
    </div>
    <div class="col form-group">
        <Label For="() => Node.AlertReceivers" />
        <textarea class="form-control" @bind="Node.AlertReceiversText"></textarea>
    </div>
    <div class="col">
        <button class="btn btn-danger" style="margin-top:2em;" @onclick="() => RemoveNode.InvokeAsync(Node)">Remove</button>
    </div>
</div>

@code {

    [Parameter]
    public NetworkNode Node { get; set; }

    [Parameter]
    public EventCallback<NetworkNode> RemoveNode { get; set; }
}
